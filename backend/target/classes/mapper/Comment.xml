<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Comment">

	<select id="selectAllCommentsByArticleNo" resultType="Comment"
		parameterType="int">
		select * from comments where article_no =
		#{article_no}
	</select>

	<select id="selectCommentByCommentNo" resultType="Comment"
		parameterType="int">
		select * from comments where comment_no = #{comment_no}
	</select>

	<insert id="insertComment" parameterType="Comment">
		insert into comments
		(article_no,account_no,account_name,comment_content)
		values(#{article_no},#{account_no},#{account_name},#{comment_content})
	</insert>

	<delete id="deleteComment" parameterType="int">
		delete from comments
		where comment_no = #{comment_no}
	</delete>

	<update id="updateComment" parameterType="Comment">
		update comments
		set
		comment_content = #{comment_content} where comment_no = #{comment_no}
	</update>

</mapper>

